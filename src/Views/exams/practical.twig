<div class="section">
	<div class="section-header">
		<div class="section-header-name">
			<div>
				<span class="class-name">{{ gradeName }}</span>
				<span>|</span>
				<span class="table-name">{{ tableName }}</span>
			</div>
		</div>
		<div class="section-header-data monitoring-summary">
			<table>
				<thead>
					<tr>
						<th class="head-space-holder cell-size-1"></th>
						<th class="head-space-holder cell-size-1"></th>
						<th class="head-space-holder cell-size-1"></th>
					</tr>
				</thead>
				<tbody>
					<tr rowname="monitoring">
						<td>رصد</td>
						<td colname="sciences"></td>
						<td colname="computer"></td>
					</tr>
					<tr rowname="absence">
						<td>غياب</td>
						<td colname="sciences"></td>
						<td colname="computer"></td>
					</tr>
				</tbody>
			</table>
		</div>
	</div>
	<div class="data-table practical-table">
		<div class="table-head">
			<table>
				<thead>
					<tr>
						<th class="cell-size-1 rotated-head serial" rowspan="2">
							<span>مسلسل</span>
						</th>
						<th class="cell-size-1 rotated-head sitting" rowspan="2">
							<span>رقم الجلوس</span>
						</th>
						<th class="cell-size-3 std-name" rowspan="2">
							<span>اسم الطالب</span>
						</th>
						<th class="cell-size-1 rotated-head class-number" rowspan="2">
							<span>الفصل</span>
						</th>
						<th class="cell-size-1 rotated-head" rowspan="1">
							<span>العلوم</span>
						</th>
						<th class="cell-size-1 rotated-head" rowspan="1">
							<span>الحاسب الآلي</span>
						</th>
					</tr>
					<tr>
						{% for deg in degrees %}
							<th>{{ deg }}</th>
						{% endfor %}
					</tr>
				</thead>
			</table>
		</div>
		<div class="table-body">
			<table>
				<thead>
					<th class="head-space-holder cell-size-1 rotated-head serial"></th>
					<th class="head-space-holder cell-size-1 rotated-head sitting"></th>
					<th class="head-space-holder cell-size-3 std-name"></th>
					<th class="head-space-holder cell-size-1 rotated-head class-number"></th>
					<th class="head-space-holder cell-size-1 rotated-head"></th>
					<th class="head-space-holder cell-size-1 rotated-head"></th>
				</thead>
				<tbody>
					{% for entity in data %}
						<tr>
							<td dataname="studentId">{{ entity.studentId }}</td>
							<td dataname="sittingNumber">{{ entity.sittingNumber }}</td>
							<td dataname="studentName">{{ entity.studentName }}</td>
							<td dataname="classNumber">{{ entity.classNumber }}</td>
							<td contenteditable="true" class={{ entity.sciences >= 0 ?: "warning" }} dataname="arabic">{{ entity.sciences < 0 ? "غ" : entity.sciences }}</td>
							<td contenteditable="true" class={{ entity.computer >= 0 ?: "warning" }} dataname="english">{{ entity.computer < 0 ? "غ" : entity.computer }}</td>
						</tr>
					{% endfor %}
				</tbody>
			</table>
		</div>
	</div>
</div>
