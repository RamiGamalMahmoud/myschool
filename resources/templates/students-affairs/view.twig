{% block section %}

	<div class="data">
		<div class="table-head">
			<table class="students-data data-header">
				<thead>
					<tr>
						<th rowspan="2" column-name="studentId">مسلسل</th>
						<th rowspan="2" column-name="studentName">اسم الطالب</th>
						<th rowspan="2" column-name="classNumber">الفصل</th>
						<th rowspan="2" column-name="grade">الصف</th>
						<th rowspan="2" column-name="enrollmentStatus">حالة القيد</th>
						<th rowspan="2" column-name="religion">الديانة</th>
						<th rowspan="2" column-name="nationalId">الرقم القومي</th>
						<th rowspan="2" column-name="sex">النوع</th>
						<th rowspan="2" column-name="pirthDate">تاريخ الميلاد</th>
						<th colspan="3" column-name="">السن</th>
					</tr>
					<tr>
						<th column-name="day">يوم</th>
						<th column-name="month">شهر</th>
						<th column-name="year">سنة</th>
					</tr>
				</thead>
			</table>
		</div>
		<div class="table-body">
			<table class="students-data">
				<tbody>
					{% for row in data %}
						<tr>
							<td contenteditable='false' column-name='studentId'>{{ row.studentId }}</td>
							<td contenteditable='true' column-name='studentName'>{{ row.studentName }}</td>
							<td contenteditable='true' column-name='classNumber'>{{ row.classNumber }}</td>
							<td contenteditable='true' column-name='grade'>{{ row.grade }}</td>
							<td contenteditable='true' column-name='enrollmentStatus'>{{ row.enrollmentStatus }}</td>
							<td contenteditable='true' column-name='religion'>{{ row.religion }}</td>
							<td contenteditable='true' column-name='nationalId'>{{ row.nationalId }}</td>
							<td contenteditable='false' column-name='sex'>{{ row.sex }}</td>
							<td contenteditable='false' column-name='pirthDate'>{{ row.pirthDate }}</td>
							<td contenteditable='false' column-name='day'>{{ row.day }}</td>
							<td contenteditable='false' column-name='month'>{{ row.month }}</td>
							<td contenteditable='false' column-name='year'>{{ row.year }}</td>
						{% endfor %}
					</tbody>
				</tbody>
			</table>
		</div>
	</div>

{% endblock section %}
