{% import "exams/general/absence.twig" as absence %}

{% if entity.religion.subjectResult.total.isAbsence %}
	{{ absence.absenceCell(entity.religion.subjectResult.total.value) }}
{% else %}
	<td>{{entity.religion.subjectResult.total.value}}</td>
{% endif %}

{% if entity.religion.subjectResult.netDegree.isAbsence %}
	{{ absence.absenceCell(entity.religion.subjectResult.netDegree.value) }}
{% else %}
	<td>{{entity.religion.subjectResult.netDegree.value}}</td>
{% endif %}

{% if entity.religion.subjectResult.grade.isAbsence %}
	{{ absence.absenceCell(entity.religion.subjectResult.grade.value) }}
{% else %}
	{% if entity.religion.subjectResult.grade.isPassed != true %}
		<td class="danger">{{entity.religion.subjectResult.grade.value}}</td>
	{% else %}
		<td>{{entity.religion.subjectResult.grade.value}}</td>
	{% endif %}
{% endif %}
