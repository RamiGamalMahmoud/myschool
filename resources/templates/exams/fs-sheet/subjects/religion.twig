{% import "exams/general/absence.twig" as absence %}

{% if entity.religion.evaluation.isAbsence %}
	{{ absence.absenceCell(entity.religion.evaluation.value) }}
{% else %}
	<td>{{ entity.religion.evaluation.value }}</td>
{% endif %}

{% if entity.religion.written.isAbsence %}
	{{ absence.absenceCell(entity.religion.written.value) }}
{% else %}
	<td>{{entity.religion.written.value}}</td>
{% endif %}

{% if entity.religion.total.isAbsence %}
	{{ absence.absenceCell(entity.religion.total.value) }}
{% else %}
	<td>{{entity.religion.total.value}}</td>
{% endif %}

{% if entity.religion.netDegree.isAbsence %}
	{{ absence.absenceCell(entity.religion.netDegree.value) }}
{% else %}
	<td>{{entity.religion.netDegree.value}}</td>
{% endif %}

{% if entity.religion.grade.isAbsence %}
	{{ absence.absenceCell(entity.religion.grade.value) }}
{% else %}
	{% if entity.religion.grade.grade == 'F' %}
		<td class="danger">{{entity.religion.grade.grade}}</td>
	{% else %}

		<td>{{entity.religion.grade.grade}}</td>
	{% endif %}
{% endif %}
