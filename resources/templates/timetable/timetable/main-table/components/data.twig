{% set subjects = teacher.getClassrooms %}
{% set firstSubject = subjects|first  %}
<tr>
	<td rowspan="{{ subjects|length }}">{{ serial }}</td>
	<td rowspan="{{ subjects|length }}" class="text-right teacher-name sticky-right">
		{{ teacher.getName }}
	</td>
	{% include "timetable/timetable/main-table/components/subject-row.twig" with {"subject": firstSubject} %}
</tr>
{% if subjects|length > 1 %}
	{% for subject in subjects %}
		{% if subject != firstSubject %}
			{% include "timetable/timetable/main-table/components/subject-row.twig" with {"subject": subject} %}
		{% endif %}
	{% endfor %}
{% endif %}
