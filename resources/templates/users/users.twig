{% extends 'admin/admin.twig' %}

{% block users %}

	<div class="content">
		<div class="data">
			<div class="users-data data-table">
				<div class="table-head">
					<table class="table">
						<thead>
							<tr class="head-space-holder">
								<th class="cell-size-2"></th>
								<th class="cell-size-3"></th>
								<th class="cell-size-3"></th>
								<th class="cell-size-2"></th>
								<th class="cell-size-2"></th>
								<th class="cell-size-2"></th>
								<th class="cell-size-2"></th>
								<th class="cell-size-3"></th>
							</tr>
							<tr>
								<th>مسلسل</th>
								<th>اسم المستخدم</th>
								<th>الاسم بالكامل</th>
								<th>الوظيفة</th>
								<th>المجموعة</th>
								<th>الصلاحيات</th>
								<th>الحالة</th>
								<th>خيارات</th>
							</tr>
						</thead>
					</table>
				</div>

				<div class="table-body">
					<table class="table">
						<thead>
							<tr class="head-space-holder">
								<th class="cell-size-2"></th>
								<th class="cell-size-3"></th>
								<th class="cell-size-3"></th>
								<th class="cell-size-2"></th>
								<th class="cell-size-2"></th>
								<th class="cell-size-2"></th>
								<th class="cell-size-2"></th>
								<th class="cell-size-3"></th>
							</tr>
						</thead>
						<tbody>
							{% set serial = 1 %}
							{% for user in users %}
								<tr>
									<td user-id="{{ user['id'] }}">{{ serial }}</td>
									<td>{{ user['user-name'] }}</td>
									<td>{{ user['full-name'] }}</td>
									<td>{{ user.moth ? '' : 'N/A' }}</td>
									<td group-id="{{ user['user-group-id'] }}">{{ user['user-group-name'] }}</td>
									<td>{{ user['user-privileges']}}</td>
									<td>{{user['is-active']}}</td>
									<td class="options">
										<a href="/admin/users/edit/{{user['id']}}" class='edit-user btn mdm success'>تعديل</a>
										<a href="/admin/users/delete/{{user['id']}}" class='delete-user btn mdm danger'>حذف</a>
										<a href="/admin/users/block/{{user['id']}}" class='block-user btn mdm warning'>تعطيل</a>
									</td>
								</tr>
								{% set serial = serial + 1 %}
							{% endfor %}
						</tbody>
					</table>
				</div>
			</div>

			<a href='./add' class="add-user btn primary">
				<i class="fa fa-plus"></i>مستخدم جديد</a>
		</div>
	</div>
{% endblock users %}
{% block js %}
	<script src="/js/users/users.js"></script>
{% endblock js %}
